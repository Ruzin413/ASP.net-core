@model mystore.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-3xl font-semibold text-gray-800 mb-6">Details</h1>

<div class="bg-white p-6 rounded-lg shadow-md">
    <h4 class="text-xl font-semibold text-gray-700 mb-4">Employee Information</h4>
    <hr class="my-4" />
    <dl class="space-y-4">
        <div class="flex items-center space-x-4">
            <dt class="text-lg font-medium text-gray-600 w-32">Name</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.FormName)</dd>
        </div>
        <div class="flex items-center space-x-4">
            <dt class="text-lg font-medium text-gray-600 w-32">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.Email)</dd>
        </div>
        <div class="flex items-center space-x-4">
            <dt class="text-lg font-medium text-gray-600 w-32">@Html.DisplayNameFor(model => model.FormAge)</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.FormAge)</dd>
        </div>
        <div class="flex items-center space-x-4">
            <dt class="text-lg font-medium text-gray-600 w-32">@Html.DisplayNameFor(model => model.Gender)</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.Gender)</dd>
        </div>
        <div class="flex items-center space-x-4">
            <dt class="text-lg font-medium text-gray-600 w-32">@Html.DisplayNameFor(model => model.Married)</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.Married)</dd>
        </div>
        <div class="flex items-center space-x-4">
            <dt class="text-lg font-medium text-gray-600 w-32">@Html.DisplayNameFor(model => model.FormTextArea)</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.FormTextArea)</dd>
        </div>
    </dl>
</div>

<div class="mt-6 space-x-4">
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="inline-block bg-yellow-500 text-white px-6 py-2 rounded-md shadow hover:bg-yellow-600">Edit</a>
    <a asp-action="Index" class="inline-block bg-blue-500 text-white px-6 py-2 rounded-md shadow hover:bg-blue-600">Back to List</a>
</div>
