@model mystore.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-3xl font-semibold text-gray-800 mb-6">Edit Employee</h1>

<div class="bg-white p-6 rounded-lg shadow-md max-w-lg mx-auto">
    <h4 class="text-xl font-semibold text-gray-700 mb-4">Employee Details</h4>
    <hr class="mb-6">

    <form asp-action="Edit" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <input type="hidden" asp-for="ID" />

        <div>
            <label asp-for="FormName" class="block text-gray-600 font-medium">Name</label>
            <input asp-for="FormName" class="w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-400" />
            <span asp-validation-for="FormName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-gray-600 font-medium">Email</label>
            <input asp-for="Email" class="w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-400" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="FormAge" class="block text-gray-600 font-medium">Age</label>
            <input asp-for="FormAge" type="number" class="w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-400" />
            <span asp-validation-for="FormAge" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Gender" class="block text-gray-600 font-medium">Gender</label>
            <select asp-for="Gender" class="w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-400" asp-items="Html.GetEnumSelectList<Gender>()"></select>
            <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label class="block text-gray-600 font-medium mb-1">Marital Status</label>
            <div class="flex items-center space-x-4">
                <label class="flex items-center space-x-2">
                    <input class="form-check-input" type="radio" asp-for="Married" value="Married" class="accent-blue-500">
                    <span>Married</span>
                </label>
                <label class="flex items-center space-x-2">
                    <input class="form-check-input" type="radio" asp-for="Married" value="NotMarried" class="accent-blue-500">
                    <span>Not Married</span>
                </label>
            </div>
            <span asp-validation-for="Married" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="FormTextArea" class="block text-gray-600 font-medium">Additional Notes</label>
            <textarea asp-for="FormTextArea" class="w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-400"></textarea>
            <span asp-validation-for="FormTextArea" class="text-red-500 text-sm"></span>
        </div>
        @* <label for="options">Choose an option:</label> *@
        @* <select id="options" name="options"> *@
        @*     @foreach (var item in Model.Gender) *@
        @*     { *@
        @*         <option value="@item">@item</option> *@
        @*     } *@
        @* </select> *@

        <div class="flex space-x-4">
            <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-md shadow hover:bg-blue-600">Save</button>
            <a asp-action="Index" class="text-blue-500 hover:underline">Back to List</a>
        </div>
    </form>
</div>
