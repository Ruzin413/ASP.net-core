@model mystore.Models.Employee;
@{
    ViewData["Title"] = "Form";
}
<h1>Form</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <form class="d-grid"asp-controller="Home" asp-action="Index" method="post">
                <input asp-for="FormName"/>
                <span asp-validation-for="FormName" style="color:red"></span>
                <input asp-for="FormAge"/>
                <span asp-validation-for="FormAge" style="color:red"></span>
                <select asp-for="Gender" class="form-control"asp-items="Html.GetEnumSelectList<Gender>()">
                    <option>Select gender</option>
                </select>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault"   asp-for="Married" value="yes">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Default radio
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" asp-for="Married" value="No">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Default checked radio
                    </label>
                </div>
                <textarea asp-for="FormTextArea" rows="3">

                </textarea>
                <input type="submit" name="submit" value="Submit"  class="btn btn-outline-danger"/>
            </form>
    </div>
</div>
